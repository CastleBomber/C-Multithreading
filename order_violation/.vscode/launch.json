    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "gcc - Debug, MUST select executable first",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build C executable and refresh explorer",
            "miDebuggerPath": "/usr/bin/gdb",
            "sourceFileMap": {"/build/glibc-eX1tMB": "/usr/src/glibc"}
        }
    ]
}